<div class="header">
  <div class="window">
    <% if user_signed_in? %>
      <span>Здравствуйте, <%= current_user.name %></span>
      <%= link_to 'Выйти', destroy_user_session_path, data: { method: :delete } %>
      <% if current_user.is_supplier? %>
        <%= link_to 'Мои товары', supplier_path(current_user.supplier) %>
      <% else %>
        <%= link_to 'Стать продавцом', new_supplier_path %>
      <%end%>
      <% else %>
        <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
      <% end %>

     
  </div>        
</div>
